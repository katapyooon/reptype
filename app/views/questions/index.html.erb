<p style="color: green"><%= notice %></p>

<% content_for :title, "Questions" %>

<h1>Questions</h1>

<%= stylesheet_link_tag "likert", "question", "data-turbo-track": "reload" %>

<% if @questions.any? %>
  <div class="questions-wrapper" data-controller="likert">
    <% @questions.each do |question| %>
      <div class="question-item" data-question-id="<%= question.id %>" style="background-color: <%= cycle('#E0F7FA', '#FFFFFF') %>;">
        <p><%= question.content %></p>

        <div class="likert-scale" style="text-align: center;">
          <% (1..5).each do |i| %>
            <span
              class="dot"
              data-action="click->likert#select"
              data-value="<%= i %>"
              data-question-id="<%= question.id %>">
            </span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>質問がありません。</p>
<% end %>


<div>
  <%= form_with local: true, url: results_path, method: :post do |f| %>
    <div id="answers-container" style="display: none;">
    </div>
    <%= f.submit '結果を見る', id: 'submit-button', disabled: true %>
  <% end %>
</div>
