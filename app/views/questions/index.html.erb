<p style="color: green"><%= notice %></p>

<% content_for :title, "Questions" %>

<h1>Questions</h1>

<%= "Debug: @questions count: #{@questions.count}" %>  <!-- デバッグ追加 -->

<div data-controller="likert" data-likert-questions="<%= @questions.to_json %>">
  <div data-likert-target="question">
    <!-- 初期質問はStimulusで表示 -->
  </div>
  <div data-likert-target="result" style="display: none;">
    <p>完了しました！</p>
  </div>
</div>

<div id="questions">
  <% @questions.each do |question| %>
    <%= render question %>
    <p>
      <%= link_to "Show this question", question %>
    </p>
  <% end %>
</div>

<%= link_to "New question", new_question_path %>
